<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!-- Content -->
    <style name="content_normal">
        <item name="android:fontFamily">@font/inter</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="content_medium">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="content_semi">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">13sp</item>
    </style>

    <!-- Body -->
    <style name="body_normal">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="fontFamily">@font/inter</item>
    </style>

    <style name="body_medium">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="body_semi">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="fontFamily">@font/inter_semibold</item>
    </style>

    <!-- Headings -->

    <style name="subheading_medium">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="fontFamily">@font/inter_medium</item>
    </style>

    <style name="subheading_semi">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
    </style>

    <style name="heading">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="fontFamily">@font/inter_semibold</item>
    </style>

    <!-- Tabs, Menus, Smaller Fonts -->

    <style name="all_caps_medium">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="all_caps_semi">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="tab_semi">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tab_normal">
        <item name="android:fontFamily">@font/inter</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="tab_active">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="icons">
        <item name="android:fontFamily">@font/inter_medium</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="android:textSize">8sp</item>
    </style>

    <style name="tab_text_normal" parent="tab_normal">
        <item name="android:textColor">@android:color/darker_gray</item>

    </style>

    <!-- Popups, Forms, Chat-->

    <style name="small_body_normal">
        <item name="android:fontFamily">@font/inter</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="small_body_semi">
        <item name="android:fontFamily">@font/inter_semibold</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="small_body_time">
        <item name="android:fontFamily">@font/inter</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:textSize">8sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="round_image">
        <item name="cornerSize">50%</item>
    </style>

    <style name="checkbox_style" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/checkbox_bg</item>
        <item name="buttonIconTint">@color/checkbox_icon</item>
    </style>

</resources>

