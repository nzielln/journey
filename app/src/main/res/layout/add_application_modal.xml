<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_marginVertical="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_a_new_application"
        android:theme="@style/subheading_medium"
        android:textColor="@color/dark_blue"
        android:gravity="center"
        android:layout_marginVertical="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="start"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/type"
            android:theme="@style/all_caps"
            android:textColor="@color/light_blue"
            android:paddingStart="12dp"
            android:paddingEnd="0dp"
            android:layout_marginBottom="8dp"

            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/type_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@null"
            android:backgroundTint="@color/light_blue"
            android:foregroundTint="@color/light_blue"
            app:boxStrokeColor="@color/light_blue"
            android:textColorHint="@color/light_blue"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            android:layout_marginBottom="12dp"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/type_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundTint="@color/light_blue"
                android:padding="10dp"

                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sponsor"
            android:theme="@style/all_caps"
            android:textColor="@color/light_blue"
            android:paddingStart="12dp"
            android:paddingEnd="0dp"
            android:layout_marginBottom="2dp"

            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/sponsor_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@null"
            android:backgroundTint="@color/light_blue"
            android:foregroundTint="@color/light_blue"
            app:boxStrokeColor="@color/light_blue"
            android:textColorHint="@color/light_blue"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"

            android:layout_marginBottom="12dp"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/sponsor_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundTint="@color/light_blue"
                android:padding="10dp"

                />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_time"
            android:theme="@style/all_caps"
            android:textColor="@color/light_blue"
            android:paddingStart="12dp"
            android:paddingEnd="0dp"
            android:layout_marginBottom="2dp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/date_time_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@null"
            android:backgroundTint="@color/light_blue"
            android:foregroundTint="@color/light_blue"
            app:boxStrokeColor="@color/light_blue"
            android:textColorHint="@color/light_blue"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="1dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp"
            android:layout_marginBottom="12dp"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/date_time_edit_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundTint="@color/light_blue"
                android:padding="10dp"

                />

        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="16dp"
            android:layout_gravity="end"
            android:gravity="end"
            >

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:theme="@style/body_medium"
                android:textColor="@color/dark_blue"
                android:background="@drawable/pill_white_border"
                android:text="@string/cancel"
                android:backgroundTint="@android:color/transparent"
                app:strokeColor="@color/dark_blue"
                app:strokeWidth="2dp"
                android:layout_marginHorizontal="8dp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/add_task_button"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:theme="@style/body_medium"
                android:textColor="@color/cream"
                android:background="@drawable/pill_blue"
                android:text="@string/save"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>