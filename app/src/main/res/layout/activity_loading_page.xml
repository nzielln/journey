<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/motionLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_loading_page_scene"
    tools:context=".JourneyApp.Loading.LoadingPage">


    <ImageView
        android:id="@+id/finalLogo"
        android:layout_width="674dp"
        android:layout_height="979dp"
        android:layout_marginBottom="24dp"

        android:src="@drawable/logo_login_page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/compass"
        android:layout_width="376dp"
        android:layout_height="564dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"

        android:src="@drawable/compass_only"
        app:layout_constraintBottom_toTopOf="@+id/journeyTypeface"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="ImageContrastCheck" />

    <ImageView
        android:id="@+id/journeyTypeface"
        android:layout_width="396dp"
        android:layout_height="178dp"
        android:layout_marginTop="400dp"
        android:layout_marginBottom="45dp"
        android:src="@drawable/journey_typeface_only"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
         />


</androidx.constraintlayout.motion.widget.MotionLayout>