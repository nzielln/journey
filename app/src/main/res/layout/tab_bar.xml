<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="horizontal"
    android:background="@color/cream"
    app:justifyContent="space_evenly"
    app:alignContent="center"
    app:alignItems="center"
    >
    
    <!-- Home -->
    <LinearLayout
        android:id="@+id/home_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"

        >
        
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/home"
            android:layout_margin="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home_tab"
            android:textAppearance="@style/tab_normal"
            android:textColor="@color/dark_blue"
            />
        
    </LinearLayout>

    <!-- Insights -->
    <LinearLayout
        android:id="@+id/insights_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"

        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/insights"
            android:layout_margin="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insights_tab"
            android:textAppearance="@style/tab_normal"
            android:textColor="@color/dark_blue"
            />

    </LinearLayout>

    <!-- Add -->
    <LinearLayout
        android:id="@+id/add_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"

        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/add"
            android:layout_margin="8dp"
            />

    </LinearLayout>

    <!-- Messages -->
    <LinearLayout
        android:id="@+id/messages_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"

        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/comments"
            android:layout_margin="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/messages_tab"
            android:textAppearance="@style/tab_normal"
            android:textColor="@color/dark_blue"
            />

    </LinearLayout>
    <!-- Profile -->
    <LinearLayout
        android:id="@+id/profile_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"

        >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/profile"
            android:layout_margin="8dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/profile_tab"
            android:textAppearance="@style/tab_normal"
            android:textColor="@color/dark_blue"
            />

    </LinearLayout>

</com.google.android.flexbox.FlexboxLayout>