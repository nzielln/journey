<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="10dp"
    >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/comment_user_image"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/friend1"
        android:scaleType="centerCrop"
        android:layout_margin="5dp"
        app:shapeAppearanceOverlay="@style/round_dash"/>
    <TextView
        android:id="@+id/name_comment_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="40dp"/>
    <TextView
        android:id="@+id/date_comment_Tv"
        android:theme="@style/all_caps"
        android:paddingLeft="40dp"
        android:layout_marginTop="18dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:id="@+id/content_comment_Tv"
        android:maxLines="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/date_comment_Tv"/>

</RelativeLayout>