<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JourneyApp.Signup.SignUp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/journeyLogo"
            android:layout_width="290dp"
            android:layout_height="290dp"
            android:contentDescription="@string/logo_Journey"
            android:src="@drawable/logo_login_page"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/welcomeBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/create_an_account_to_get_started"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"
            android:layout_marginTop="299dp"/>

        <!-- Name -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:drawableStart="@drawable/profile_icon"
                android:drawablePadding="15dp"
                android:textColor="@color/light_blue"
                android:paddingBottom="20dp"
                android:backgroundTint="@color/light_blue"/>
        </RelativeLayout>

        <!-- Email -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="420dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_JourneyUser"
                android:drawableStart="@drawable/email_outline_icon"
                android:drawablePadding="15dp"
                android:textColor="@color/light_blue"
                android:paddingBottom="20dp"
                android:backgroundTint="@color/light_blue"/>
        </RelativeLayout>

        <!-- Password -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="490dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password_JourneyPassword"
                android:drawableStart="@drawable/email_outline_icon"
                android:drawablePadding="15dp"
                android:drawableEnd="@drawable/eye_invisible"
                android:textColor="@color/light_blue"
                android:paddingBottom="20dp"
                android:backgroundTint="@color/light_blue"/>
        </RelativeLayout>

        <!-- Buttons -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="600dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:text="Sign Up"
                android:textAllCaps="false"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="@string/continue_with_google"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:drawableLeft="@drawable/common_google_signin_btn_icon_light"/>


        </RelativeLayout>

        <!-- Singup -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="750dp"
            android:gravity="center">

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue"
                android:text="Already have an account?" />

            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:text="Log in here."
                android:layout_toEndOf="@+id/question"/>

        </RelativeLayout>




    </RelativeLayout>


</FrameLayout>