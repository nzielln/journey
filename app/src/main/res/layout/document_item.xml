<?xml version="1.0" encoding="utf-8"?>
<com.google.android.flexbox.FlexboxLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:alignItems="center"
    app:justifyContent="space_between"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/document_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/todo_sample_title"
            android:theme="@style/tab_semi"
            />

        <TextView
            android:id="@+id/document_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/doc_sample_time"
            android:theme="@style/all_caps_medium"
            android:textColor="@color/light_blue"
            />


    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/more_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:icon="@drawable/ellipsis_vert"
        style="?attr/materialIconButtonStyle"
        app:iconTint="@color/light_blue"

        />
</com.google.android.flexbox.FlexboxLayout>