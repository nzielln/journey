<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JourneyApp.Chat.Fragments.ChatFragment">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="0dp"
        android:id="@+id/toolbar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profileImageView"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/person_image"
                android:scaleType="centerCrop"
                android:layout_margin="20dp"
                app:shapeAppearanceOverlay="@style/round_dash"/>

            <TextView
                android:id="@+id/firstnameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="20dp"
                android:theme="@style/subheading_semi"
                android:text="First Name goes here"/>

            <TextView
                android:id="@+id/lastnameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="70dp"
                android:layout_marginTop="40dp"
                android:theme="@style/all_caps" />


        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:tabIndicator="@null"
        app:tabBackground="@drawable/tab_selection"
        app:tabSelectedTextColor="@color/dark_blue"
        app:tabTextColor="@color/dark_blue"
        app:tabGravity="fill"
        app:tabTextAppearance="@style/tab_normal"
        app:tabSelectedTextAppearance="@style/tab_active"
        app:tabMode="fixed"
        android:theme="@style/tab_active"
        android:layout_below="@id/toolbar"
        app:tabIndicatorColor="@color/white"
        app:tabIndicatorHeight="3dp"
        android:layout_marginBottom="16dp"
        app:tabRippleColor="@null"
        android:background="@android:color/transparent">

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tabLayout"
        android:layout_marginTop="0dp" >
    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>