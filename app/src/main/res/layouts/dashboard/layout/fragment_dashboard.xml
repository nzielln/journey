<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JourneyApp.Dashboard.DashboardFragment">


   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="30dp"
       android:orientation="horizontal">


       <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/dash_image"
        android:layout_width="10dp"
        android:layout_height="32dp"
        android:src="@drawable/sample"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:layout_marginStart="30dp"
        app:shapeAppearanceOverlay="@style/round_dash"
         />

       <TextView
           android:id="@+id/welcomeTv"
           android:layout_height="wrap_content"
           android:layout_width="wrap_content"
           android:theme="@style/subheading_medium"
           android:layout_weight="3"
           android:paddingStart="8dp"
           android:layout_marginTop="6dp"
           android:text="Hi, Jessica Jones!"/>


       <com.google.android.material.button.MaterialButton
           android:id="@+id/notificationIconBtn"
           style="?attr/materialIconButtonStyle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:minWidth="0dp"
           android:minHeight="0dp"
           android:padding="0dp"
           android:layout_marginEnd="30dp"
           app:icon="@drawable/notification_bell"
           app:iconPadding="0dp"
           app:iconSize="20dp"

           />

   </LinearLayout>


    <SearchView
        android:id="@+id/search_view_dashboard"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:queryHint="Search"
        android:iconifiedByDefault="false"
        android:queryBackground="@android:color/transparent"
        android:background="@drawable/bg_white_rounded"
        android:clickable="true"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/dashboard_tab"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:tabIndicator="@null"
        android:layout_marginTop="140dp"
        app:tabBackground="@drawable/tab_selection_white"
        app:tabSelectedTextColor="@color/dark_blue"
        app:tabTextColor="@color/dark_blue"
        app:tabGravity="fill"
        app:tabTextAppearance="@style/tab_normal"
        app:tabSelectedTextAppearance="@style/tab_active"
        app:tabMode="fixed"
        android:theme="@style/tab_active"
        android:layout_marginBottom="16dp"
        app:tabRippleColor="@null"
        android:background="@android:color/transparent"
        >
        <com.google.android.material.tabs.TabItem
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="For You"
            />

        <com.google.android.material.tabs.TabItem
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Following"
            />

        <com.google.android.material.tabs.TabItem
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="New"
            />

    </com.google.android.material.tabs.TabLayout>

    <FrameLayout
        android:layout_marginTop="180dp"
        android:id="@+id/dashboard_rv_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </FrameLayout>

</FrameLayout>