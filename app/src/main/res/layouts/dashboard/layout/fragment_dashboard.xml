<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JourneyApp.Dashboard.DashboardFragment">

    <!-- TODO: Update blank fragment layout -->
<!--    <TextView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        android:text="@string/dashboard" />-->
    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/sample"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:shapeAppearanceOverlay="@style/round_image"

        />
    <TextView
        android:id="@+id/welcomeTv"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:theme="@style/subheading_semi"
        android:textStyle="bold"
        android:layout_marginStart="70dp"
        android:layout_marginTop="30dp"
        android:text="Hi, Jessica Jones"/>
    <SearchView
        android:id="@+id/search_view_dashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/bg_white_rounded"
        android:clickable="true"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/profile_tab"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:tabIndicator="@null"
        android:layout_marginTop="140dp"
        app:tabBackground="@drawable/tab_selection"
        app:tabSelectedTextColor="@color/dark_blue"
        app:tabTextColor="@color/dark_blue"
        app:tabGravity="fill"
        app:tabTextAppearance="@style/tab_normal"
        app:tabSelectedTextAppearance="@style/tab_active"
        app:tabMode="fixed"
        android:theme="@style/tab_active"
        android:layout_marginBottom="16dp"
        app:tabRippleColor="@null"
        android:background="@android:color/transparent"
        >
        <com.google.android.material.tabs.TabItem
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="For You"
            android:layout_marginHorizontal="12dp"
            />

        <com.google.android.material.tabs.TabItem
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Following"
            android:layout_marginHorizontal="12dp"

            />

        <com.google.android.material.tabs.TabItem
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="New"
            android:layout_marginHorizontal="12dp"

            />

    </com.google.android.material.tabs.TabLayout>

</FrameLayout>