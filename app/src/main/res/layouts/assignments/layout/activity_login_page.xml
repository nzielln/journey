<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JourneyApp.Login.LoginPage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/journeyLogo"
            android:layout_width="290dp"
            android:layout_height="290dp"
            android:contentDescription="@string/logo_Journey"
            android:src="@drawable/logo_login_page"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/welcomeBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/welcome_back"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dark_blue"
            android:layout_marginTop="299dp"/>

        <!-- Email -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="370dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/email_JourneyUser"
                android:drawableStart="@drawable/email_outline_icon"
                android:drawablePadding="15dp"
                android:textColor="@color/light_blue"
                android:paddingBottom="20dp"
                android:backgroundTint="@color/light_blue"/>
        </RelativeLayout>

        <!-- Password -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="450dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/password_JourneyPassword"
                android:drawableStart="@drawable/email_outline_icon"
                android:drawablePadding="15dp"
                android:drawableEnd="@drawable/eye_invisible"
                android:textColor="@color/light_blue"
                android:paddingBottom="20dp"
                android:backgroundTint="@color/light_blue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55dp"
                android:layout_marginLeft="230dp"
                android:text="@string/forgot_password"
                android:textColor="@color/dark_blue"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </RelativeLayout>

        <!-- Buttons -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="550dp">

            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="@string/log_in"
                android:textStyle="bold"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="false"
                android:text="@string/continue_with_google"
                android:textStyle="bold"
                android:layout_marginTop="50dp"
                android:drawableLeft="@drawable/common_google_signin_btn_icon_light"/>


        </RelativeLayout>

        <!-- Singup -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="660dp"
            android:gravity="center">

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue"
                android:text="@string/don_t_have_an_account_already" />

            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_blue"
                android:textStyle="bold"
                android:text="@string/sign_up_here"
                android:layout_toEndOf="@+id/question"/>

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>


