<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:paddingHorizontal="24dp"
    android:paddingTop="32dp"
    android:gravity="center_horizontal"
    tools:context=".JourneyApp.Login.LoginPage">

        <ImageView
            android:id="@+id/journeyLogo"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_marginBottom="32dp"
            android:contentDescription="@string/logo_Journey"
            android:src="@drawable/logo_login_page"
            />

        <TextView
            android:id="@+id/welcomeBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="2"
            android:text="@string/welcome_back"
            android:theme="@style/heading"
            android:layout_marginBottom="32dp"
            android:textColor="@color/dark_blue" />

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            >

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/email_JourneyUser"
                android:drawableStart="@drawable/small_email"
                android:drawablePadding="10dp"
                android:textColor="@color/light_blue"
                android:paddingBottom="20dp"
                android:theme="@style/body_normal"
                android:drawableTint="@color/light_blue"
                android:backgroundTint="@color/light_blue"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password_JourneyPassword"
                android:drawableStart="@drawable/small_lock"
                android:drawablePadding="10dp"
                android:drawableEnd="@drawable/small_eye"
                android:textColor="@color/light_blue"
                android:paddingBottom="20dp"
                android:theme="@style/body_normal"
                android:drawableTint="@color/light_blue"
                android:backgroundTint="@color/light_blue"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_marginBottom="64dp"
                android:text="@string/forgot_password"
                android:theme="@style/tab_semi_small"
                android:textColor="@color/dark_blue"
                />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:theme="@style/body_semi"
                    android:text="@string/log_in"
                    app:cornerRadius="10dp"
                    android:textStyle="bold"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"

                    android:textAllCaps="false"
                    android:text="@string/continue_with_google"
                    android:theme="@style/body_semi"
                    android:gravity="center"
                    app:iconTint="@color/dark_blue"
                    app:iconGravity="textStart"
                    app:iconSize="15dp"
                    app:icon="@drawable/googleg_standard_color_18"
                    android:backgroundTint="@android:color/transparent"
                    android:textColor="@color/dark_blue"
                    app:strokeColor="@color/dark_blue"
                    app:strokeWidth="1.5dp"
                    app:cornerRadius="10dp"
                    />
        </LinearLayout>

        <!-- Singup -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="openSignUpActivity"
            android:gravity="center">

            <TextView
                android:id="@+id/question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/don_t_have_an_account_already"
                android:gravity="center"
                android:theme="@style/tab_normal"
                />
            <View
                android:id="@+id/space_around"
                android:layout_width="2dp"
                android:layout_height="2dp"
                />

            <TextView
                android:id="@+id/signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/tab_bold_small"
                android:text="@string/sign_up_here"/>

        </LinearLayout>

</LinearLayout>


