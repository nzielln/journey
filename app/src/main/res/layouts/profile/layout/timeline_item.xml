<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:layout_marginHorizontal="8dp"
    >

        <LinearLayout
            android:id="@+id/timeline"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/timeline_bg"
            android:gravity="center_horizontal"

            >
                <View
                    android:id="@+id/timeline_rank_circle"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginTop="24dp"
                    />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/timeline_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/rounded_15_white_border_dark"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="32dp"

            >
                <TextView
                    android:id="@+id/timeline_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/todo_sample_title"
                    android:theme="@style/tab_semi_small"
                    android:maxLines="2"

                    />

                <TextView
                    android:id="@+id/timeline_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/todo_sample_time"
                    android:textColor="@color/light_blue"
                    android:theme="@style/all_caps_medium" />
        </LinearLayout>

</LinearLayout>