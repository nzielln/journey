<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rounded_15_white_border_todo"

    >

        <TextView
            android:id="@+id/todo_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/todo_sample_title"
            android:theme="@style/tab_semi_small"
            android:maxLines="2"

            />

        <TextView
            android:id="@+id/todo_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/todo_sample_time"
            android:textColor="@color/light_blue"
            android:theme="@style/all_caps_medium" />

</LinearLayout>